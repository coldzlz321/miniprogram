/**index.wxss**/
.container,page{
  padding: 0;
  min-height: 100% !important;
}
page{
  background-color: #ddd;
}
.userinfo {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #999;
}

.num-show{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid #eee;
  padding: 10px 0;
  background-color: #fff;
  margin-bottom: 20px;
}
.num-show .item{
  display: flex;
  width:187rpx;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 13px;
}
.num-show .right{
  border-right: 1px solid #eee;
}
.section-title{
  background-color: #fff;
  font-size: 13px;
  font-weight: bold;
  height: 30px;
  line-height: 30px;
  padding:0 20px;
}
.fr{
  float:right
}
.scroll-container{
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
  display: flex;
  height: 40px;
  flex-direction: row;
  overflow-anchor:true
}
.scroll-container .scroll-tab{
  padding:0 10px;
  height: 40px;
  line-height: 40px;
}
.scroll-container .scroll-tab.active{
  color:#f73131
}
.progress-container{
  width: 100%;
  height: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.progress-container .progress-bg{
  width: 100px;
  height: 5px;
  border-radius: 5px;
  background-color: #ddd;
  position: relative;
}
.progress-container .progress-bg .progress-thumb{
  position: absolute;
  top: 0;
  left: 0;
  width: 50px;
  height: 5px;
  border-radius: 5px;
  background-color: #3498db;
}

